    <style>
      div.order-summary__sections {height:auto;} div.wct h2 {font-weight:bold;font-size:15px;} div.wct>div p {font-size:13px;}
      div.wct>h2 {color:#ff8e9e;position:relative;text-align:center;font-size:16px;margin:15px 0;}
      div.wct>h2:before {content:'';position:absolute;top:50%;left:0;width:100%;height:2px;background:#ff8e9e;}
      div.wct>h2>span {background:#fafafa;padding:0 20px;position:relative;z-index:1;}
      div.wct>div {display:flex;justify-content:space-between;align-items:center;margin-top:20px;} div.wct>div>div {padding-left:10px;color:#565451;}
      p#timer {text-align:center;border:1px solid #ff8e9e;padding:10px 5px;margin:20px 0;background:#ffe4e8;} p#timer>b {color:#ff8e9e;font-weight:900;} p#timer>b>span {color:black;font-weight:100;}
      ol.breadcrumb {justify-content:space-between;position:relative;}
      ol.breadcrumb:before {content:'';position:absolute;width:88%;left:30px;top:20px;border-top:4px solid #ff8e9e;z-index:-1;}
      ol.breadcrumb>li.breadcrumb__item {position:relative;display:block!important;text-align:center;} ol.breadcrumb>li.breadcrumb__item>svg {display:none;}
      ol.breadcrumb>li.breadcrumb__item:before {content:'2';width:40px;height:40px;border-radius:50%;border:4px solid #ff8e9e;text-align:center;display:inline-block;font-size:18px;font-weight:700;padding-top:7px;box-sizing:border-box;background:#fff;}
      ol.breadcrumb>li.breadcrumb__item:nth-child(3):before {content:'3';} ol.breadcrumb>li.breadcrumb__item:nth-child(4):before {content:'4';}
      ol.breadcrumb>li.breadcrumb__item.breadcrumb__item--completed:before {content:'✓';} ol.breadcrumb>li.breadcrumb__item.breadcrumb__item--current:before {background:#ff8e9e;color:white;}
      ol.breadcrumb>li.breadcrumb__item .breadcrumb__link, ol.breadcrumb>li.breadcrumb__item .breadcrumb__text {display:block;text-align:center;text-transform:uppercase;padding-top:3px;}
      span.step__footer__previous-link-content, li.policy-list__item>a {color: #565451;}
      img.logo__image--large {max-height: 62px;}
      @media screen and (min-width:1000px){div.wct.mob {display:none;}}
      @media screen and (max-width:999px){div.wct.dt {display:none;} div.wct.mob {flex-direction:column;} div.wct.mob>h2>span {background:white;}}
    </style>
  
