    <script>
      function getCookie(name) {
        const matches = document.cookie.match(new RegExp("(?:^|; )" + name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, '\\$1') + "=([^;]*)"));
        return matches ? decodeURIComponent(matches[1]) : undefined;
      }
      if (getCookie('timer') > new Date().getTime()){
        var time = getCookie('timer');
        var timer = setInterval(function(){
          var left = time - new Date().getTime();
          document.querySelector('p#timer>b').innerHTML = Math.floor(left / 60000) + 'm ' + Math.floor(left % 60000 / 1000) + 's';
          if (left < 1000){
            fetch('/cart/clear.js', {method: 'post', credentials: 'include'}).then(res=>{
              clearInterval(timer);
              document.cookie = 'timer=""; path=/; domain=thenamestamp.co; secure=true; expires=-1';
              window.location.href = '/collections/products';
            });
          }
        },1000);
      } else {
        document.cookie = 'timer=' + (new Date().getTime()+900000) + '; path=/; domain=thenamestamp.co; secure=true; expires=' + new Date(new Date().getTime() + 3600000 * 24).toUTCString();
        var time = new Date().getTime() + 900000;
        var timer = setInterval(function(){
          var left = time - new Date().getTime();
          document.querySelector('p#timer>b').innerHTML = Math.floor(left / 60000) + 'm ' + Math.floor(left % 60000 / 1000) + 's';
          if (left < 1000){
            fetch('/cart/clear.js', {method: 'post', credentials: 'include'}).then(res=>{
              clearInterval(timer);
              document.cookie = 'timer=""; path=/; domain=thenamestamp.co; secure=true; expires=-1';
              window.location.href = '/collections/products';
            });
          }
        },1000);
      }
    </script>
